    .products__merchandise
        .merchandise
            .merchandise__close
            .merchandise__container.container
                .merchandise__image-block
                    .merchandise__slider
                        .merchandise__image
                            .merchandise__picture(style='background: url(static/img/product-3.png) center no-repeat;')
                    .merchandise__navigation
                        .merchandise__slide
